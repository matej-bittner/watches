generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(uuid())
  name     String
  surname  String
  password String
  email    String @unique
}

model Parts {
  id         String  @id @default(uuid())
  part       String
  czechTitle String?

  collection Collection[]
  variant    Variant[]
}

model Collection {
  id         String    @id @default(uuid())
  title      String
  czechTitle String?
  Parts      Parts?    @relation(fields: [partsId], references: [id])
  partsId    String?
  variant    Variant[]
}

model Variant {
  id           String      @id @default(uuid())
  price        String
  stock        Int
  material     String?
  type         String?
  color        String?
  Parts        Parts?      @relation(fields: [partsId], references: [id])
  partsId      String?
  Collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?
}

model Order {
  id           String         @id @default(uuid())
  createdAt    DateTime       @default(now())
  price        Int
  name         String
  surname      String
  phoneNumber  Int
  email        String
  city         String
  zipCode      Int
  street       String?
  houseNumber  String
  note         String?
  status       String
  orderedParts OrderedParts[]
}

model OrderedParts {
  id         String  @id @default(uuid())
  caseId     String
  dialId     String
  handsId    String
  braceletId String
  movementId String
  Order      Order?  @relation(fields: [orderId], references: [id])
  orderId    String?
}
